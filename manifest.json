{
  "name": "Dadaki Product Picker",
  "version": "0.8",
  "description": "Select Amazon products and add it to the Dadaki backend",
  "permissions": ["activeTab", "storage", "identity", "https://www.amazon.es/"],
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://www.gstatic.com https://*.firebaseio.com https://apis.google.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery.js"]
    }
  ],
  "options_page": "options.html",

  "browser_action": {
    "default_title": "Dadaki product picker",
    "default_icon": {
      "32": "images/extension_icon32.png",
      "48": "images/extension_icon48.png",
      "128": "images/extension_icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "images/extension_icon32.png",
    "48": "images/extension_icon48.png",
    "128": "images/extension_icon128.png"
  },
  "manifest_version": 2
}